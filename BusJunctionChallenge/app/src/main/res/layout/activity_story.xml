<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junction.hack.busjunctionchallenge.StoryActivity"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/story_data_layout"
        android:orientation="vertical"
        android:layout_weight="30">

        <include layout="@layout/activity_story_display"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_layout"
        android:orientation="vertical"
        android:layout_weight="70"
        android:background="#212121">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/route_inner_layout" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/countdown"
                    android:text = "00:00"
                    android:textColor="#ffffff"
                    android:textSize = "16dp"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    />
            <View
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id = "@+id/starter_point"
                android:background="@drawable/point_background"
                android:layout_margin="15dp"/>
            <View
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id = "@+id/end_point"
                android:background="@drawable/point_background"
                android:layout_margin="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
