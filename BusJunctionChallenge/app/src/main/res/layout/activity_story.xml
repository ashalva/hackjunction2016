<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junction.hack.busjunctionchallenge.StoryActivity"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/story_data_layout"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight = "35dp"
        android:paddingBottom="10dp"
        android:layout_weight="25"
        android:weightSum="100"
        android:background="@color/hsl_blue">
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "GACHEREBA"
            android:fontFamily="font_family_light"
            android:padding="15dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/story_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight = "15dp"
            android:layout_weight="90"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/like"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:text="527"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/suprise"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:text="112"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/heart"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:text="342"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/route_layout"
        android:orientation="vertical"
        android:layout_weight="75"
        android:background="#212121">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/route_inner_layout" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id = "@+id/countdown"
                    android:text = "00:00"
                    android:textColor="#ffffff"
                    android:textSize = "16dp"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    />
            <View
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id = "@+id/starter_point"
                android:background="@drawable/point_background"
                android:layout_margin="15dp"/>
            <View
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id = "@+id/end_point"
                android:background="@drawable/point_background"
                android:layout_margin="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
