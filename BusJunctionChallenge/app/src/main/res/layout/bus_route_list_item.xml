<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.junction.hack.busjunctionchallenge.MainActivity">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/routeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:text="122A"
        android:textColor="@color/material_color_black_87_percent"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/RelativeLayout02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/bus_current_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/material_list_normal_primary_text_size"
                android:layout_marginTop="@dimen/material_list_text_first_position_margin_start"
                android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                android:textColor="@color/material_color_black_54_percent"
                android:maxWidth="200dp"
                android:text="City Center Campus" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/material_color_black_54_percent"
                android:src="@mipmap/ic_bus"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/bus_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/material_list_normal_primary_text_size"
                android:textColor="@color/material_color_black_54_percent"
                android:layout_marginTop="@dimen/material_list_text_first_position_margin_start"
                android:layout_marginEnd="@dimen/material_list_text_first_position_margin_start"
                android:text="12:23" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/mytextview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_list_normal_primary_text_size"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/material_list_text_first_position_margin_start"
                android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                android:text="Stati" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/material_divider_height"
                android:background="@color/material_color_blue_400"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/mytextview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/material_list_text_first_position_margin_start"
                android:layout_marginEnd="@dimen/material_list_text_first_position_margin_start"
                android:visibility="invisible"
                android:text="111" />

            <TextView
                android:text="10:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/material_color_black_54_percent"
                android:id="@+id/bus_arrive_in" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>

