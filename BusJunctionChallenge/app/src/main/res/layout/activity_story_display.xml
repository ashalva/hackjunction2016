<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/story_data_inner_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junction.hack.busjunctionchallenge.StoryDisplay">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/usa"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/story_display_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingTop="15dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/title_textview"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/rout_info_title"
        android:textSize="22dp"
        android:layout_below="@id/story_display_image"/>

    <TextView
        android:id="@+id/description_textview"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="@string/route_info_description"
        android:textSize="20dp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/next_story_button" />


</RelativeLayout>
